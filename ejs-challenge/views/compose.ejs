<%- include("partials/header") -%>
  <h1>Compose</h1>
  <form class="" action="/compose" method="post">
    <div class="form-group">
      <label for="titleBox">Title</label>
      <input class="form-control" type="text" id="titleBox" name="title" autofocus="autofocus", placeholder="Entry Title">
    </div>
    <div class="form-group">
      <label for="postContent">Post</label>
      <textarea class="form-control" id="postContent" name="post" rows="5"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="publish">Publish</button>
  </form>
<%- include("partials/footer") -%>
